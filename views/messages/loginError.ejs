<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css">
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <link rel="stylesheet" href="../../src/input.css">
    <title>Login Success</title>
  </head>
  <body>
    <nav
      class="bg-white border-gray-200 dark:bg-gray-900 fixed top-0 left-0 w-full"
    >
      <div
        class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl p-4"
      >
        <a
          href="https://datahub-i5bd.onrender.com"
          class="flex items-center space-x-3 rtl:space-x-reverse"
        >
          <img
            src="https://res.cloudinary.com/dgr2kbknb/image/upload/f_auto,q_auto/dmc7buasxwmdm9bexgr1"
            class="h-8"
            alt="DataHub Logo"
          />
          <span
            class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
            >DataHub</span
          >
        </a>
        <div class="flex items-center space-x-6 rtl:space-x-reverse">
          <a
            href="https://datahub-i5bd.onrender.com/login"
            class="text-sm text-blue-600 dark:text-blue-500 hover:underline"
            >Login</a
          >
        </div>
      </div>
    </nav>


    <div
      class="bg-gray-100 dark:bg-gray-900 flex items-center justify-center w-screen h-screen"
    >
      <div
        id="success-message "
        class="flex-col gap-2 text-center p-4 w-[80%] md:w-96 align-center justify-center bg-gray-800 text-white"
      >
        <h1>
          <% errors.forEach(element => {%>
          <p><%= element.msg %></p>

          <% }); %>
        </h1>
        <h2><%= message %></h2>
        <h2>Redirecting to login page......</h2>
      </div>
    </div>

    <script>
      try {
        setTimeout(() => {
          window.location.assign("https://datahub-i5bd.onrender.com/login");
        }, 4000);
      } catch (error) {
        console.log(error);
      }
    </script>
  </body>
</html>
